package com.app.attr;

import java.util.Collections;
import java.util.Comparator;
import java.util.List;
import java.util.stream.Collectors;
import java.util.stream.Stream;

public class Test {
	
public static void main(String[] args) {
	CustomComparator comp=new CustomComparator();
	  Customer c1 = new Customer("Aashish Choudhary", "9876543210", 25000.75, "ACC1001");
      Customer c2 = new Customer("Sabiha Syed", "9123456780", 48000.00, "ACC1002");
      Customer c3 = new Customer("Rohan Mehta", "9998887776", 12500.50, "ACC1003");
      Customer c4 = new Customer("Ananya Sharma", "9812233445", 30500.00, "ACC1004");
      Customer c5 = new Customer("Vikram Singh", "9700011122", 60000.25, "ACC1005");
      List<Customer>list=List.of(c1,c2,c3,c4,c5);
      Stream<Customer>st=list.stream();
      List<Customer>sortedBal=st.sorted(Comparator.comparingDouble(Customer::getBal)).collect(Collectors.toList());
      sortedBal.forEach(p->System.out.println(p.bal));
      Collections.sort(list,comp);
    System.out.println("Using comparator "+list);
}

}
