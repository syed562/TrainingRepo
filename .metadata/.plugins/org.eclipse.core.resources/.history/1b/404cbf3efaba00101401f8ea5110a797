package com.app.textprocc;




public class TextBasedProcessing {

    public static void main(String[] args) {
        // TODO Auto-generated method stub
        System.out.println("hello this is test");

        // String concatenation/multi-line definition (details is partially obscured but this recreates the content)
        String details = "the part of a sentence which has the verb, "
                        + "and which tells us what the subject is or does. In the sentence-\"He went "
                        + "+ \"cycling after returning from school\" the predicate is "
                        + "+ \"went cycling after returning from school\";";

        // Multiline string using text blocks (Java 15+) or standard String with escaped newlines
        // Assuming Java 15+ is used due to other features visible in the IDE tabs (e.g., SwitchYield, TextBlock)
        String msg = """
                Hello %s, welcome to Java %d!
                """.formatted("Aarna", 17);

        System.out.println(msg);

        // Another String formatting example using text blocks
        String msg1 = """
                the part of a sentence which has the verb %s
                and which tells
                us what the subject is or does. In the sentence-"He went
                cycling after returning from school" the predicate is
                'went cycling after returning from school
                """.formatted("Aarna", 17);

        System.out.println(msg1);
        
        String json = """
        		{
        		    name: james,
        		    accountno: 3424243242,
        		    accountname: james rodrik,
        		    accountbalance: 500000
        		}""";
        		
        		"""

    }
}