package com.flightapp.repo;

import java.time.LocalDate;

import org.springframework.data.r2dbc.repository.Query;
import org.springframework.data.repository.reactive.ReactiveCrudRepository;
import org.springframework.stereotype.Repository;

import com.flightapp.models.Flight;

import reactor.core.publisher.Flux;

@Repository

public interface FlightRepo extends ReactiveCrudRepository<Flight, Long> {
	@Query("SELECT * FROM flights WHERE from_place = $1 AND to_place = $2 AND departure_time >= $3 AND departure_time < $3 + INTERVAL '1 DAY'")
	Flux<Flight> searchFlights(String fromPlace, String toPlace, LocalDate departDate);

}
