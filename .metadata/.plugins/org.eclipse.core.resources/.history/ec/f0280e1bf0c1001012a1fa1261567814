	String getOrder(){
		log.info("Hii");
		log.debug("Logger added");
	return "hello";	
	}
	
	@PostMapping("/order")
	Order saveOrder(@RequestBody  @Valid Order o) {
		service.insertOrder(o);
		return o;
	}
	
	
